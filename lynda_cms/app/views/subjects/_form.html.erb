<%= error_messages_for(@subject) %>


<!-- Zahteva f obj -->
<!-- po defaultu rails pretpostavlja da se partial nalazi u istom dir kao i view -->
<!-- ukoliko je iz drugog dir, koristi se full path: "subjects/form" -->
<table summary="Subject form fields">
  <tr>
    <!-- label(na_sta_se_odnosi, "Custom ime") -->
    <th><%= f.label(:name, "Name") %></th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th><%= f.label(:position) %></th>
    <td><%= f.select(:position, 1..@subject_count) %></td>
  </tr>
  <tr>
    <th><%= f.label(:visible) %></th>
    <td><%= f.check_box(:visible) %></td>
  </tr>
