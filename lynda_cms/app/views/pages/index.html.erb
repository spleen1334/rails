<% @page_title = "Pages" %>

<%= link_to("<< Back to Subjects", {:controller => 'subjects', :action => 'index'}, :class => 'back-link') %>

<div class="pages index">
  <h2>Pages</h2>

  <%= link_to("Add New Page", {:action => 'new', subject_id: @subject.id
}, :class => 'action new', ) %>

  <table class="listing" summary="Page list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>Subject</th>
      <th>Page</th>
      <th>Permalink</th>
      <th>Visible</th>
      <th>Sections</th>
      <th>Actions</th>
    </tr>
    <% @pages.each do |page| %>
    <tr>
      <td><%= page.position %></td>
      <td><%= page.subject.name if page.subject %></td>
      <td><%= page.name %></td>
      <td><%= page.permalink %></td>
      <!-- <td class="center"><%= page.visible ? 'Yes' : 'No' %></td> -->
      <td class="center"><%= status_tag(page.visible) %></td>
      <td class="center"><%= page.sections.size %></td>
      <td class="actions">
        <!-- { action , id NIJE HTML } -->
        <%= link_to("Show", { :action => 'show', subject_id: @subject.id
, :id => page.id }, :class => 'action show') %>
        <%= link_to("Edit", { action: 'edit', subject_id: @subject.id
, id: page.id }, :class => 'action edit') %>
        <%= link_to("Delete", { action: 'delete', subject_id: @subject.id
, id: page.id }, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
