<%
text = "This is some long sample text. It includes line breaks\n and double-line breaks.\n\n It rambles on and on and on.\n\n Until we get to this last line."
%>

<!-- Prelomi text na line_width -->
<h2>word_wrap</h2>
<%= word_wrap(text, :line_width => 30) %>
<hr />

<!-- \n konvertuje u <br>, \n\n >> u <p>text</p> -->
<h2>simple_format</h2>
<%= simple_format(text) %>
<hr />

<!-- Kombinovanje za zeljeni efekat -->
<h2>simple_format + word_wrap</h2>
<%= simple_format(word_wrap(text, :line_width => 30)) %>
<hr />

<!-- Skracenje na zeljenu duzinu -->
<h2>truncate</h2>
<%= truncate(text, :length => 40, :omission => "...") %>
<hr />

<!-- Slicno kao i truncate, ali radi na zeljenu rec, 'includes' 7 word pre i posle cuva ostalo stavlja ... -->
<h2>excerpt</h2>
<%= excerpt(text, 'includes', :radius => 7, :omission => "...") %>
<hr />

<!-- Target text wrapuje pronadjeni text u html tagove, \1 slicno kao bash to je trazena rec -->
<h2>highlight</h2>
<%= highlight(text, 'sample text') %>
<hr />
<%= highlight(text, ['sample', 'rambles'],
:highlighter => '<em>\1</em>') %>
<hr />

<!-- Formira plural od neke reci -->
<h2>pluralize</h2>
<%= "student".pluralize %><br />
<%= "ox".pluralize %><br />
<br />
<!-- Drugi metod, vezan za brojeve -->
<!-- pluralize(number, 'word', 'nasa definicija plurala') -->
<%= pluralize(2, 'product') %><br />
<br />
<% [0, 1, 20].each do |n| %>
  <%= pluralize(n, 'product') %><br />
  <%= pluralize(n, 'octopus') %><br />
  <%= pluralize(n, 'snipe', 'snope') %><br />
<% end %>
<hr />

<!-- Petlja koja prolazi kroz listu -->
<h2>cycle</h2>
<% 5.times do %>
  <%= cycle('red', 'green', 'blue') %><br />
<% end %>
